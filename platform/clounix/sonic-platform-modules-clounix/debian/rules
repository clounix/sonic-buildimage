#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

include /usr/share/dpkg/pkg-info.mk

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export INSTALL_MOD_DIR:=extra

PYTHON         ?= python3

PACKAGE_PRE_NAME := sonic-platform-clounix
KVERSION   ?= $(shell uname -r)
KERNEL_SRC := /lib/modules/$(KVERSION)
export KERNEL_SRC
MOD_SRC_DIR:= $(shell pwd)
MODULE_DIRS:= common
MODULE_DIR := modules
UTILS_DIR := utils
SERVICE_DIR := service
SCRIPTS_DIR := scripts
BIOS_DIR := bios_bin
CONF_DIR := conf
PROCESS_DIR := clxProcess
MODPROBE_DIR := modprobe.d
IXGBE_VERSION := 5.9.4
PLATFORM_STRING_LIST:= x86_64-clounix_clx8000_48c8d-r0 clounix_clx12800_32d-r0
XILINX_PLATFORM_TOOLS_LIST:= x86_64-clounix_clx8000_48c8d-r0


MODULE_CFLAGS:=KBUILD_EXTRA_SYMBOLS=$(MOD_SRC_DIR)/sysfs/bsp_driver/Module.symvers
%:
	dh $@ --with systemd,python2,python3 --buildsystem=pybuild

clean:
	dh_testdir
	dh_testroot
	dh_clean

build:
	# For common driver, maurice
	cd $(MOD_SRC_DIR)/sysfs; \
	make clean; \
	make all DESTDIR=$(MOD_SRC_DIR)/debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}; \
	make install DESTDIR=$(MOD_SRC_DIR)/debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}; \
	cd $(MOD_SRC_DIR)/${MODULE_DIRS}; \
	python2 setup.py build; \
	python2 setup.py bdist_wheel -d $(MOD_SRC_DIR)/${MODULE_DIRS}/utils; \
	python3 setup.py build; \
	python3 setup.py bdist_wheel -d $(MOD_SRC_DIR)/${MODULE_DIRS}/utils; \

binary: binary-arch binary-indep
	# Nothing to do

binary-arch: 
	# Nothing to do

#install: build
	#dh_testdir
	#dh_testroot
	#dh_clean -k 
	#dh_installdirs

binary-indep:
	dh_testdir
	dh_installdirs

	# Custom package commands
	dh_installdirs -p$(PACKAGE_PRE_NAME)-${MODULE_DIRS} /$(KERNEL_SRC)/$(INSTALL_MOD_DIR); \
	dh_installdirs -p$(PACKAGE_PRE_NAME)-${MODULE_DIRS} /usr/local/bin; \
	dh_installdirs -p$(PACKAGE_PRE_NAME)-${MODULE_DIRS} /usr/local/bin/${PROCESS_DIR}; \
	dh_installdirs -p$(PACKAGE_PRE_NAME)-${MODULE_DIRS} /usr/bin; \
	dh_installdirs -p$(PACKAGE_PRE_NAME)-${MODULE_DIRS} /lib/systemd/system; \
	dh_installdirs -p$(PACKAGE_PRE_NAME)-${MODULE_DIRS} /etc/${MODPROBE_DIR}; \
	cp $(MOD_SRC_DIR)/${MODULE_DIRS}/$(UTILS_DIR)/* debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}/usr/local/bin/; \
	cp $(MOD_SRC_DIR)/${MODULE_DIRS}/$(SERVICE_DIR)/*.service debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}/lib/systemd/system/; \
	cp $(MOD_SRC_DIR)/${MODULE_DIRS}/$(SCRIPTS_DIR)/* debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}/usr/bin/; \
	cp $(MOD_SRC_DIR)/${MODULE_DIRS}/${PROCESS_DIR}/* debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}/usr/local/bin/${PROCESS_DIR}; \
	cp $(MOD_SRC_DIR)/${MODULE_DIRS}/modprobe/* debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}/etc/${MODPROBE_DIR}; \
	(for platform_string in $(PLATFORM_STRING_LIST); do \
		dh_installdirs -p$(PACKAGE_PRE_NAME)-${MODULE_DIRS} /usr/share/sonic/device/$${platform_string}; \
		cp $(MOD_SRC_DIR)/${MODULE_DIRS}/$(UTILS_DIR)/*.whl debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}/usr/share/sonic/device/$${platform_string}; \
	done)
	if [ $$CONFIGURED_ARCH = "amd64" ]; then \
		cd $(MOD_SRC_DIR)/$(MODULE_DIRS)/$(BIOS_DIR); \
		./afulnx_64 /GENDRV KERNEL=$(KERNEL_SRC)/build .;\
		./afulnx_64 /MAKEDRV KERNEL=$(KERNEL_SRC)/build .;\
		make KERNEL=$(KERNEL_SRC)/build;\
		cd $(MOD_SRC_DIR); \
		# Add bios upgrade tool to device(usr/local/bin), maurice 20201125 \
		cp -r $(MOD_SRC_DIR)/${MODULE_DIRS}/bios_bin debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}/usr/local/bin/; \
	fi; \
	cp $(MOD_SRC_DIR)/${MODULE_DIRS}/$(SERVICE_DIR)/platform_api_mgnt.sh debian/$(PACKAGE_PRE_NAME)-${MODULE_DIRS}/usr/local/bin/;
	
	# pit
	dh_installdirs -p$(PACKAGE_PRE_NAME)-pit-sysdiag /usr/local; \
	dh_installdirs -p$(PACKAGE_PRE_NAME)-pit-sysdiag /usr/bin; \
	cp $(MOD_SRC_DIR)/pit-sysdiag/pit debian/$(PACKAGE_PRE_NAME)-pit-sysdiag/usr/local/ -rf; \
	cp -r $(MOD_SRC_DIR)/pit-sysdiag/sysdiag debian/$(PACKAGE_PRE_NAME)-pit-sysdiag/usr/bin/;

	# Resuming debhelper scripts
	dh_testroot
	dh_install
	dh_installchangelogs
	dh_installdocs
	dh_systemd_enable
	dh_installinit
	dh_systemd_start
	dh_link
	dh_fixperms
	dh_compress
	dh_strip
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
.PHONY: build binary binary-arch binary-indep clean
