                    "type": "fan.any.fault"
                }
            ],
            "actions": [
                {
                    "type": "thermal_control.control",
                    "status": "false"
                },
                {
                    "type": "fan.all.set_speed",
                    "speed": "100"
                }
            ]
        },
        {
            "name": "any asic over threshold",
            "conditions": [
                {
                    "type": "asic.over.high_threshold"
                }
            ],
            "actions": [
                {
                    "type": "thermal_control.control",
                    "status": "false"
                },
                {
                    "type": "fan.all.set_speed",
                    "speed": "100"
                }
            ]
        },
        {
            "name": "any thermal over threshold",
            "conditions": [
                {
                    "type": "thermal.over.high_threshold"
                }
            ],
            "actions": [
                {
                    "type": "thermal_control.control",
                    "status": "false"
                },
                {
                    "type": "fan.all.set_speed",
                    "speed": "100"
                }
            ]
        },
        {
            "name": "all fan presence / thermal no warning",
            "conditions": [
                {
                    "type": "fan.all.presence"
                },
                {
                    "type": "fan.all.good"
                },
                {
                    "type": "thermal.all.good"
